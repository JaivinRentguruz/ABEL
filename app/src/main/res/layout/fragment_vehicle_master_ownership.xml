        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        </LinearLayout>



            <LinearLayout
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    style="@style/fullbtn"
                    android:text="@string/done"/>

